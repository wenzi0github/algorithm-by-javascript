{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "removeComments": false,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
